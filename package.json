{
  "name": "social-network-backend-ts",
  "version": "1.0.0",
  "description": "A minimal social-media style backend built with Node.js, TypeScript, GraphQL, Apollo Server, and Prisma.",
  "scripts": {
    "dev": "ts-node-dev --respawn src/server.ts",

    "build": "prisma generate && tsc && npm run copy:graphql",

    "copy:graphql": "mkdir -p dist/graphql/typeDefs && cp -R src/graphql/typeDefs/. dist/graphql/typeDefs/",

    "start": "node dist/server.js",

    "postinstall": "prisma generate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akshat-kul/social-network-backend-ts.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/akshat-kul/social-network-backend-ts/issues"
  },
  "homepage": "https://github.com/akshat-kul/social-network-backend-ts#readme",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@apollo/server": "^5.2.0",
    "@graphql-tools/load-files": "^7.0.1",
    "@graphql-tools/schema": "^10.0.29",
    "@prisma/client": "^6.19.0",
    "bcryptjs": "^3.0.3",
    "graphql": "^16.12.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.19.0"
  }
}
